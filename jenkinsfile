pipeline{
    agent any

    stages{
        stage('Check out'){
            steps{
                git changelog: false, poll: false, url: 'https://github.com/gkiran04/SmartHotel.git'
            }            
        }

        stage('Code Coverage'){
            steps{
                sh 'mvn org.jacoco:jacoco-maven-plugin:0.5.5.201112152213:prepare-agent'
            }
        }

        stage('Code Analysis'){
            steps{
                sh 'mvn clean sonar:sonar -Dsonar.host.url=http://34.93.167.58:9000/ -Dsonar.login=admin -Dsonar.password=kiran@123 -Dsonar.java.binaries=./target/classes'
            }
        }
        
        /* stage('Build'){
            steps{
                sh 'mvn clean package -Dmaven.test.skip=true'
            }
        }*/
    } // Stages end

} // pipeline End