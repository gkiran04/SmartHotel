pipeline{
    agent { label 'demo'}

    stages{
        stage('Check out'){
            steps{
                git changelog: false, poll: false, url: 'https://github.com/gkiran04/SmartHotel.git'
            }            
        }

        stsge('Test'){
            steps{
                sh 'mvn test'
            }
        }
        
        stage('Build'){
            steps{
                sh 'mvn clean package'
            }
        }
    } // Stages end

} // pipeline End